{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "node_modules"
    ],
    "outDir": "./dist",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "tests",
    "commitlint.config.ts",
    "vitest.config.ts",
    "./node_modules/@types"
  ]
}