{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "commitlint.config.ts"
  ]
}